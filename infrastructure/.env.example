# Ejemplo de variables de entorno para Terraform
# Copia este archivo a .env y completa con tus valores reales

# DigitalOcean API Token
export TF_VAR_do_token="your_digitalocean_api_token_here"

# SSH Key Fingerprint (obtenido de DigitalOcean Dashboard)
export TF_VAR_ssh_key="your_ssh_key_fingerprint_here"

# Región de DigitalOcean
export TF_VAR_region="sfo3"

# Tamaño del droplet
export TF_VAR_droplet_size="s-2vcpu-2gb"

# Imagen del sistema operativo
export TF_VAR_image="ubuntu-24-10-x64"

# Ruta absoluta a la llave privada SSH
export TF_VAR_private_key_path="/home/frank/.ssh/digitalOcean"